<Window x:Class="RaumdarstellungWpfApplication.EinkaufszettelAnzeigen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaumdarstellungWpfApplication"
        mc:Ignorable="d"
        Title="Einkaufszettel Anzeigen" Height="300" Width="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="0,0,0,2"></Border>
        <TextBlock Name="titel" Text="Einkaufzettel von Kunde Nr.: "  TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        <Label Name="K_ID" Content="" Grid.Column="1" VerticalContentAlignment="Bottom" BorderBrush="Black" BorderThickness="0,0,0,2"/>
        
        <StackPanel Grid.Row="1" Name="artikeln" >
            
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Name="anzahl">
            
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>
